{
    "jcr_api": {
        "cloud_functions": {
            "auth_function_url": "https://us-central1-{project-id}.cloudfunctions.net/jcr-auth-handshake",
            "summary_function_url": "https://us-central1-{project-id}.cloudfunctions.net/jcr-observation-summary",
            "details_function_url": "https://us-central1-{project-id}.cloudfunctions.net/jcr-observation-details"
        },
        "secrets": {
            "user_id_secret_name": "projects/{project-id}/secrets/jcr-user-id",
            "password_secret_name": "projects/{project-id}/secrets/jcr-password",
            "base_url_secret_name": "projects/{project-id}/secrets/jcr-base-url"
        }
    },
    "gcp": {
        "project_id": "your-gcp-project",
        "dataset_id": "jcr_data",
        "location": "US",
        "batch_size": 1000,
        "timeout_seconds": 300
    },
    "batch_settings": {
        "site_batch_size": 5,
        "lookback_days": 7
    },
    "error_notification": {
        "email_recipients": ["admin@yourcompany.com"],
        "slack_channel": "#data-pipeline-alerts"
    }
}